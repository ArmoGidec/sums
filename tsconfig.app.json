{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "packages/**/*"],
  "exclude": ["src/**/__tests__/*", "node_modules/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["./packages/*"],
      "@components/*": ["./src/components/*"]
    }
  }
}
